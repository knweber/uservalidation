<h3 class="new-order-title"><strong>Select Items for Order:</strong></h3>

<br />

  <form class="order-form field" action="/orders" method="post">

    <div class="field">
      <input type="text" name="order[collection_id]" placeholder="Enter Collection ID" />
    </div>

    <div class="field">
      <input type="checkbox" name="order[three_item]" placeholder="Three Item Order?" />
    </div>

    <div class="field">
      <input class="checkbox" type="checkbox" name="Leggings">    Leggings</input>
    </div>

    <div class="field">
      <input class="checkbox" type="checkbox" name="Sports Bra">    Sports Bra</input>
    </div>

    <div class="field">
      <input class="checkbox" type="checkbox" name="Jacket">   Sports Jacket</input>
    </div>

    <div class="field">
      <input class="checkbox" type="checkbox" name="Tops">    Top</input>
    </div>

    <div class="field">
      <input class="checkbox" type="checkbox" name="Wrap">    Wrap</input>
    </div>

    <input class="submit_button button is-light" type="submit" value="Create Order" />
  </form>
</div>
