    </form>

    <form class='order-form field' action="/orders" method="post">
      <input type="hidden" name="influencer_id" value= <%= @influencer.id %> />
      <div class = "field">
        <input class = "checkbox" type = "checkbox" name = "order[items][sports-jacket]">   Sports Jacket</input>
      </div>
    </form>

    <form class='order-form field' action="/orders" method="post">
      <input type="hidden" name="influencer_id" value= <%= @influencer.id %> />
      <div class = "field">
        <input class = "checkbox" type = "checkbox" name = "order[items][tops]">    Top</input>
      </div>
    </form>

    <form class='order-form field' action="/orders" method="post">
      <input type="hidden" name="influencer_id" value= <%= @influencer.id %> />
      <div class = "field">
        <input class = "checkbox" type = "checkbox" name = "order[items][wrap]">    Wrap</input>
      </div>
    </form>

    <br />
    <p>
    <input class="submit-button button is-light" type="submit" value="Create Order" />
    </p>
  </form>
</div>
