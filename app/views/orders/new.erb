<div class = "new-order-form">
  <h3 class="new-order-title"><strong>Select Items for Monthly Order:</strong></h3>
  <p></p>
  <form class='order-form field' action="/tickets" method="post">

    <form class='order-form field' action="/orders" method="post">
      <!-- <input type="hidden" name="ticket_id" value= <%= @ticket.id %> /> -->
      <input type="hidden" name="influencer_id" value= <%= @influencer.id %> />
      <div class="field">
        <input class="checkbox" type="checkbox" name="order[items][leggings]">    Leggings</input>
      </div>
    </form>

    <form class='order-form field' action="/orders" method="post">
      <input type="hidden" name="influencer_id" value= <%= @influencer.id %> />
      <div class = "field">
        <input class = "checkbox" type = "checkbox" name = "order[items][sports-bra]">    Sports Bra</input>
